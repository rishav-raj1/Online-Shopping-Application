<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeveloperActivity">

    <ScrollView

        android:id="@+id/manypic"
        android:background="@drawable/bg67"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/slogan_category1"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:text="DEVELOPER"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
                android:textSize="26sp"
                android:textStyle="bold" />



            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:textColor="@android:color/black"
             android:background="#87cefa"
                android:layout_margin="10dp"
                android:alpha="0.8"
                >




                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/m1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/rishav1"
                    app:civ_border_width="2dp"
                    android:layout_weight="0.1"
                    app:civ_border_color="@android:color/white"/>

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_weight="1.9"
                    android:textStyle="bold"
                    android:text="Rishav Kumar"
                    android:gravity="center"

                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            </LinearLayout>





            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:textColor="@android:color/black"
                android:background="#87cefa"
                android:layout_margin="10dp"
                android:alpha="0.8"
                >




                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/m2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/aditi"
                    app:civ_border_width="2dp"
                    android:layout_weight="0.1"
                    app:civ_border_color="@android:color/white"/>

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_weight="1.9"
                    android:textStyle="bold"
                    android:text="Aditi Kumari"
                    android:gravity="center"

                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:textColor="@android:color/black"
                android:background="#87cefa"
                android:layout_margin="10dp"
                android:alpha="0.8"
                >




                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/m3"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/shilpi"
                    app:civ_border_width="2dp"
                    android:layout_weight="0.1"
                    app:civ_border_color="@android:color/white"/>

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_weight="1.9"
                    android:textStyle="bold"
                    android:text="Shilpa Biswas"
                    android:gravity="center"

                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            </LinearLayout>





            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:textColor="@android:color/black"
                android:background="#87cefa"
                android:layout_margin="10dp"
                android:alpha="0.8"
                >




                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/m4"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/rani"
                    app:civ_border_width="2dp"
                    android:layout_weight="0.1"
                    app:civ_border_color="@android:color/white"/>

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_weight="1.9"
                    android:textStyle="bold"
                    android:text="Rani Kumari"
                    android:gravity="center"

                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            </LinearLayout>















        </LinearLayout>
    </ScrollView>




</RelativeLayout>